extends ../layout.pug

block content
  form(method='post', action='/api/user/login')
    div.form-element
      label(for='email') Email
      input(type='email', id='email', name='email')
    div.form-element
      label(for='password') Password
      input(type='password', id='password', name='password')

    div.form-buttons
      button(type='submit') Login
